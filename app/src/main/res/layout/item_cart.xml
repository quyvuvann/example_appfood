<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/imgcart"
        android:layout_margin="10dp"
        android:src="@drawable/pizza1"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:id="@+id/idtitlecart"
                android:text="Tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:id="@+id/idtxteachitemcart"
                android:text="$0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout

                android:background="@drawable/yelow_background"
                android:layout_width="120dp"
                android:layout_height="30dp">

                <ImageView
                    android:id="@+id/idimgminuscart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yelow_background"
                    android:src="@drawable/minus" />
                <RelativeLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView

                        android:background="@drawable/yelow_background"
                        android:src="@drawable/white_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/idtxtnumcart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="1"
                        android:textColor="@color/black" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/idimgpluscart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/yelow_background"
                    android:src="@drawable/plus" />

            </RelativeLayout>

            <TextView
                android:id="@+id/idtxttotalitemcart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:text="$0"
                android:textColor="@color/black"
                android:textSize="20dp" />
            </RelativeLayout>

    </LinearLayout>
</LinearLayout>