<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.IntroActivity"
    android:background="@drawable/logofood"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:gravity="center_horizontal"
        android:text="Food App"
        android:textColor="#E8EFEB"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_marginTop="10dp"
        android:src="@drawable/introappfood"
        android:layout_width="match_parent"
        android:layout_height="400dp"/>
    <TextView
        android:textStyle="bold"
        android:textColor="#fff"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:text="All the delicious food on your phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:background="@drawable/botton_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_baseline_login_24"
            android:id="@+id/btnstart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="Click start "
            android:textColor="#fff"
            android:textSize="30dp"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>